<h2>Words</h2>
<table class="table-hover table-responsive col-sm-12">
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>

<% @word.each do |word| %>
    <tr>
      <td>Ranked:<%= word.ranking %></td>
      <td><%= link_to word.word, word_path(word.id)  %></td>
      <td><%= button_to "Upvote", upvote_word_path(word), method: :patch %></td>
    </tr>
<% end %>
  </table>

<%= button_to "Add Word", new_word_path, method: :get %>
